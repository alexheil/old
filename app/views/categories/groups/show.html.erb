<%= provide(:title, sanitize(@group.title)) %>

<% content_for :og_header do %>
  <meta property="og:url" content="<%= category_group_url(@category, @group) %>" />
  <meta property="og:title" content="<%= @group.title %>" />
  <meta property="og:description" content="<%= @group.tagline %>" />
  <meta property="og:image" content="<%= @group.image %>" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="<%= @group.title %>" />
  <meta name="twitter:description" content="<%= @group.tagline %>" />
  <meta name="twitter:image" content="<%= @group.image %>" />
  <meta name="twitter:url" content="<%= category_group_url(@category, @group) %>" />
  <meta name="twitter:site" content="@halowake" />
<% end %>

<%= link_to "Create New Post", new_category_group_post_path(@category, @group) if admin_signed_in? %>
<%= link_to "Edit Group", edit_category_group_path(@category, @group) if admin_signed_in? %>
<%= link_to "Delete", category_group_path, method: :delete  if admin_signed_in? %>


<div class="full-width-container">
  <div class="container">

    <div class="category-title">
      <%= @category.title %>
    </div>

    <div class="content group-container">
      <div class="front-container">
        <div class="one-space">
          <img class="image-border" srcset="<%= @group.image %>" width="100%" height="auto" />
        </div>
        <div class="bottom-left">
          <%= link_to @group.image_source, @group.image_source_link, class: "second-link" if @group.image_source.present? %>
        </div>
      </div>

      <div class="post-title padding-horizontal padding-vertical">
        <%= @group.title %>
      </div>

      <div class="author-text padding-horizontal">
        <%= @group.admin.name %> posted <%= time_ago_in_words(@group.created_at) %> ago.
      </div>

      <div class="best padding-vertical padding-horizontal">
        <%= sanitize(@group.content) %>
      </div>

      <div class="padding-vertical padding-horizontal">
        <%= link_to @group.anchor, @group.link if @group.link.present? %>
      </div>

      <%= render 'partials/ad_trash' %>

      <% if @group.posts.any? %>
        <div class="padding-horizontal padding-vertical">
          <%= link_to "Get Started", category_group_post_path(@category, @group, @group.posts.first), class: "first-post" %>
        </div>
      <% end %>

      <div class="padding-horizontal padding-vertical">
        <div class="one-space">
          Share this on:
        </div>
        <a onclick="javascript:window.open('https://www.facebook.com/sharer/sharer.php?u=<%= category_group_url(@category, @group) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)" class="facebook">facebook</a>
        <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @group.title %> - &amp;url=<%= category_group_url(@category, @group) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)" class="twitter">twitter</a>
      </div>

  </div>
</div>