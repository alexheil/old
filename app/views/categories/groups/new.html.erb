<%= provide(:title, "Create New Group") %>

<div class="post-title five-space center">
  Create New Group
</div>

<div class="form-container">  
  <div class="five-space">     
    <%= form_for(@group, url: category_groups_path) do |f| %>
      <%= render 'partials/group_errors' %>
      <div class="field">
        <%= f.text_field :title, placeholder: "Title", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_field :tagline, placeholder: "Tagline", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_field :image, placeholder: "Image", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_field :image_source, placeholder: "Image Source", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_field :image_source_link, placeholder: "Image Source Link", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_field :anchor, placeholder: "Anchor Text", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_field :link, placeholder: "Link", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_area :content, placeholder: "Content", class: "text-area" %>
      </div>
      <div class="field">
        <%= f.check_box :published %>
        <%= f.label :published %>
      </div>
      <div class="actions">
        <%= f.submit "Create Group", class: "first-post" %>
      </div>
    <% end %>
  </div>
</div>